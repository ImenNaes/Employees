@model Employees.Models.Employee




<link href="~/Style/Style.css" rel="stylesheet" />




<section>
	
	<h2> Partial view</h2>
	<div class="container">
		<div class="card-deck">
			<div class="card text-center">

				<h4 class="card-title text-muted">Are you sure you want to delete the current department?</h4>
				<dl class="dl-horizontal">

					<dt>
						@Html.DisplayNameFor(model => model.Name)
					</dt>

					<dd>
						@Html.DisplayFor(model => model.Name)
					</dd>

					<dt>
						@Html.DisplayNameFor(model => model.Position)
					</dt>

					<dd>
						@Html.DisplayFor(model => model.Position)
					</dd>

					<dt>
						@Html.DisplayNameFor(model => model.Dep.Description)
					</dt>

					<dd>
						@Html.DisplayFor(model => model.Dep.Description)
					</dd>


				</dl>

				@using (Html.BeginForm())
				{
					@Html.AntiForgeryToken()
					<div class="card-footer">
						<input type="submit" value="Delete" class="btn btn-danger"/>
					</div>
				}
			</div>
		</div>
	</div>
</section>

